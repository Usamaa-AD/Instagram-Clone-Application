<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.ProfileUploadActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/user_svg"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/addProfileButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        android:backgroundTint="#f95537"
        android:drawableLeft="@drawable/image_svg"
        android:text="Add Picture"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/profileImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profileImage"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Skip"
        android:textColor="#f95537"
        android:textSize="18sp"
        android:visibility="visible"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/addProfileButton"
        app:layout_constraintStart_toStartOf="@+id/addProfileButton"
        app:layout_constraintTop_toBottomOf="@+id/addProfileButton"
        app:strokeColor="#f95537"
        app:strokeWidth="2dp"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finishButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        android:backgroundTint="#f95537"
        android:fontFamily="@font/actor"
        android:text="@string/finish"
        android:textSize="18sp"
        android:visibility="gone"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/profileImage"
        app:layout_constraintStart_toStartOf="@+id/profileImage"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>